<?xml version="1.0"?>
<robot
    xmlns:xacro="http://www.ros.org/wiki/xacro"
    xmlns:xi="http://www.w3.org/2001/XInclude">

  <xacro:macro name="open_hand_gripper" params="arm">

    <!-- Left finger -->
    <link name="${arm}_gripper_l_finger">
      <visual>
	<origin rpy="0 0 -1.5708" xyz="0 -0.007 0"/>
	<geometry>
	  <mesh filename="package://baxter_description/meshes/open_hand_gripper/finger_double.dae" scale="0.01 0.01 0.01" />
	</geometry>
      </visual>
      <!-- base -->
      <collision>
      	<origin rpy="0 0 0.131" xyz="0.0125 -0.040 0.0275"/>
      	<geometry>
	  <box size="0.021 0.060 0.055" /> 
      	</geometry>
      </collision>
      <!-- tip -->
      <collision>
      	<origin rpy="0 0 0.3927" xyz="0.0235 -0.095 0.0275"/>
      	<geometry>
	  <box size="0.021 0.036 0.055" /> 
      	</geometry>
      </collision>

      <inertial>
	<origin rpy="0 0 -1.5708" xyz="0.000000 0.000000 0.000000"/>
	<mass value="0.00094542"/>
	<inertia ixx="2e-08" ixy="0" ixz="0" iyy="3e-08" iyz="0" izz="2e-08"/>
      </inertial>
    </link>

    <!-- Right finger -->
    <link name="${arm}_gripper_r_finger">
      <visual>
	<origin rpy="0 0 -1.5708" xyz="0 -0.007 0"/>
	<geometry>
	  <mesh filename="package://baxter_description/meshes/open_hand_gripper/finger_double.dae" scale="0.01 0.01 0.01" />
	</geometry>
      </visual>
      <!-- base -->
      <collision>
      	<origin rpy="0 0 0.131" xyz="0.0125 -0.040 0.0275"/>
      	<geometry>
	  <box size="0.021 0.060 0.055" /> 
      	</geometry>
      </collision>
      <!-- tip -->
      <collision>
      	<origin rpy="0 0 0.3927" xyz="0.0235 -0.095 0.0275"/>
      	<geometry>
	  <box size="0.021 0.036 0.055" /> 
      	</geometry>
      </collision>

      <inertial>
	<origin rpy="0 0 -1.5708" xyz="0.000000 0.000000 0.000000"/>
	<mass value="0.00094542"/>
	<inertia ixx="2e-08" ixy="0" ixz="0" iyy="3e-08" iyz="0" izz="2e-08"/>
      </inertial>
    </link>

    <link name="${arm}_gripper_base">
      <inertial>
	<mass value="0.28" />
	<origin xyz="0.0014 0 0.024" rpy="0 -0 0" />
	<inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0" />
      </inertial>
      <visual>
	<origin rpy="1.5708 0 1.5708" xyz="-0.05 -0.05 0.03175"/>
	<geometry>
	  <mesh filename="package://baxter_description/meshes/open_hand_gripper/base.dae" scale="0.01 0.01 0.01" />
	</geometry>
      </visual>
      <collision>
	<origin rpy="0 0 0" xyz="0 0 0.07"/>
	<geometry>
	  <cylinder radius="0.05" length="0.08" />
	</geometry>
      </collision>
    </link>

    <!-- Base of Left end effector -->
    <joint name="${arm}_endpoint" type="fixed">
      <origin xyz="0 0 0.045" rpy="0 -0 0" />
      <axis xyz="0 0 0" />
      <parent link="${arm}_gripper_base" />
      <child link="${arm}_gripper" />
    </joint>

    <!-- Left finger -->
    <joint name="${arm}_gripper_l_finger_joint" type="revolute">
      <origin rpy="0 -1.5708 0" xyz="0.01833 -0.024 0.074"/>
      <axis xyz="0 0 1"/>
      <parent link="${arm}_gripper"/>
      <child link="${arm}_gripper_l_finger"/>
      <limit effort="20.0" lower="0" upper="1.5708" velocity="5.0"/> <!-- upper is open -->
      <dynamics damping="0.7" friction="0.0"/>
    </joint>

    <!-- Right finger -->
    <joint name="${arm}_gripper_r_finger_joint" type="revolute">
      <origin rpy="0 -1.5708 3.14159" xyz="-0.01833 0.019 0.074"/>
      <axis xyz="0 0 1"/>
      <parent link="${arm}_gripper"/>
      <child link="${arm}_gripper_r_finger"/>
      <limit effort="20.0" lower="0" upper="1.5708" velocity="5.0"/> <!-- upper is open -->
      <dynamics damping="0.7" friction="0.0"/>
      <mimic joint="${arm}_gripper_l_finger_joint" offset="0" multiplier="1" />
    </joint>
  </xacro:macro>
</robot>
